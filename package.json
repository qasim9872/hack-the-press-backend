{
    "name": "testing-poc-backend",
    "version": "1.0.0",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "watch:build": "tsc --watch",
        "watch:start": "nodemon",
        "dev": "run-p watch:start watch:swagger",
        "test": "jest",
        "staged-test": "npm run test -- --passWithNoTests --bail --findRelatedTests",
        "precommit": "npm run test",
        "clean": "shx rm -rf node_modules/ dist/ coverage/",
        "pretty-base": "prettier \"**/*.{ts, js, json}\"",
        "format": "npm run pretty-base --write",
        "lint": "eslint --fix 'src/**/*.{ts,tsx}'",
        "swagger": "swaggerGen -c ./swagger.config.yml",
        "watch:swagger": "onchange -i './src/controllers/**/*.ts' -- npm run swagger"
    },
    "author": "Muhammad Qasim <qasim9872@gmail.com>",
    "license": "MIT",
    "keywords": [],
    "devDependencies": {
        "@types/config": "0.0.36",
        "@types/cors": "^2.8.6",
        "@types/express-pino-logger": "^4.0.2",
        "@types/helmet": "0.0.47",
        "@types/jest": "^25.1.4",
        "@types/mongoose": "^5.7.29",
        "@types/morgan": "^1.9.1",
        "@types/node": "^14.0.14",
        "@types/pino": "^6.3.0",
        "@typescript-eslint/eslint-plugin": "^2.25.0",
        "@typescript-eslint/parser": "^2.25.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.2.3",
        "jest": "^25.2.3",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.2",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.0.2",
        "pino-pretty": "^4.0.0",
        "prettier": "^2.0.2",
        "shx": "^0.3.2",
        "ts-jest": "^25.2.1",
        "ts-node": "^8.8.1",
        "typescript": "^3.8.3",
        "typescript-rest-swagger": "^1.1.1"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "npm run format",
            "npm run staged-test"
        ],
        "*.json": [
            "npm run format"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "dependencies": {
        "@typegoose/typegoose": "^7.2.0",
        "config": "^3.3.1",
        "cors": "^2.8.5",
        "express": "^4.17.1",
        "express-pino-logger": "^5.0.0",
        "helmet": "^3.23.3",
        "mongoose": "^5.9.21",
        "mongoose-timestamp": "^0.6.0",
        "morgan": "^1.10.0",
        "pino": "^6.3.2",
        "typescript-rest": "^3.0.1"
    }
}
